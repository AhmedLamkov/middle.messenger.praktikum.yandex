<div class="input" >
    <label class="input__container">
        <input
            class="input__element {{class}}"
            type={{type}}
            placeholder="{{placeholder}}"
        />
        <div class="input__label">{{label}}</div>
        {{#if icon}}
            <div class="input__icon"></div>
        {{/if}}
    </label>
</div>